<div class="app-wrapper sign-up">
    <div class="sign-up-box">
        <h1>Sign Up</h1>
        <form action="/signup" method="post">
            <div>
                <div>
                    <label>
                        <h3>Email</h3>
                    </label>
                </div>
                <div>
                    <input type="text" name="username" class="input-box" />
                </div>
            </div>
            <div>
                <div>
                    <label>
                        <h3>Password</h3>
                    </label>
                </div>
                <div>
                    <input type="password" name="password" class="input-box" />
                </div>
            </div>
            <div>
                <input type="submit" value="Sign up" class="primary-btn" />
                <a class="link" href="login">Log In</a>
            </div>
        </form>
    </div>
</div>
